extends ../layouts/default

block content
	#hero: .container
		h1 Sampson Tan
		h1 Software engineer who can pick new technology up quickly and can manage stakeholders relationships
		
	.container: .row
		.col-sm-8
			h2
				span  Nice to meet you!
			
			#accordion.panel-group
				.panel.panel-default
					.panel-heading: h3.panel-title: a(class="accordion-toggle", data-toggle="collapse", data-parent="#accordion", href="#collapseBlog") Experience
					#collapseBlog.panel-collapse.collapse.in: .panel-body
						p  With over five years of working experience, in HK, Shen Zhen and Sweden 
						P  Graduation from double degree in computing and business administration
		
						a(href='/blog').btn.btn-default View the Experience
				
				.panel.panel-default
					.panel-heading: h3.panel-title: a(class="accordion-toggle", data-toggle="collapse", data-parent="#accordion", href="#collapseGallery") Gallery
					#collapseGallery.panel-collapse.collapse.in: .panel-body
						p Photos with my colleagues over the years
						p Sweden, Germany and HK ~
						a(href='/gallery').btn.btn-default View the Gallery
				
				.panel.panel-default
					.panel-heading: h3.panel-title: a(class="accordion-toggle", data-toggle="collapse", data-parent="#accordion", href="#collapseContact") Contact Me
					#collapseContact.panel-collapse.collapse.in: .panel-body
						p Feel free to leave me a message~
						a(href='/contact').btn.btn-default View the Contact Form
				
		.col-sm-4
			h2
				span.entypo.entypo-key
				span  Languages
			dl.dl-horizontal
				dt English
				dt Cantonese 
				dt Putonghua
			

